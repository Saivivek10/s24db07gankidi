extends layout

block content
    h1= title
    if (toShow == null)
        h2 No instance to delete
    else
        - let gunid = toShow._id
        - let gun_type = toShow.gun_type
        - let Manufacturer = toShow.Manufacturer
        - let Caliber = toShow.Caliber
        - let actionid = "/resource/gun/" + gunid
        script let actionid = "#{actionid}"
        div
            div.row
                div(class='gunAttr mr-3') gun ID is:
                div #{gunid}
            div.row
                div(class='gunAttr mr-3') gun Name is:
                div #{gun_type}
            div.row
                div(class='gunAttr mr-3') gun Place is:
                div #{Manufacturer}
            div.row
                div(class='gunAttr mr-3') Caliber is:
                div #{Caliber}
            button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
            button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
        script.
            function cancel() {
                // Go back to the home page for the gun collection
                window.location.href='/gun';
            }
            function deleteOnid() {
                console.log("starting delete");
                // delete first
                fetch(actionid, {
                    method: 'DELETE' // Don't need a body for the delete
                }).then((resp) => {
                    return resp.json(); // or resp.text() or whatever the server sends
                }).then((body) => {
                    alert("Delete succeeded");
                    window.location.href='/gun';
                    // TODO handle body
                }).catch((error) => {
                    // TODO handle error
                    alert("Delete failed " + error);
                });
            }
